<div class="containar">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">会員情報編集</h5>
      <div class="form-body p-4">
        <% if @end_user.errors.any? %>
          <%= @end_user.errors.count %>件が未入力です！！！
          <ul>
            <% @end_user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        <%= form_with model:@end_user, url: user_path do |f| %>
          <div class="row form-group">
            <h5 class="mt-2">ニックネーム</h5>
            <%= f.text_field :nick_name, class:"form-control mt-2" %>
          </div>
          <div class="row form-group">
            <h5 class="mt-3">メールアドレス</h5>
            <%= f.text_field :email, class:"form-control mt-2" %>
          </div>
          <div class="row form-group">
            <%= f.file_field :profile_image, class:"mt-3", placeholder: "プロフィール画像", accept: "image/*" %>
          </div>
            <%= f.submit "編集内容を保存", class: "btn btn-success offset-2 mt-3" %>
            <%= link_to "退会する", users_unsubscribe_users_path, class: "btn btn-danger offset-3 mt-3" %>
         <% end %>
      </div>
    </div>
  </div>
</div>