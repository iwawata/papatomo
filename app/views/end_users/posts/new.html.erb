<div class="containar">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">新規投稿フォーム</h5>
      <div class="form-body p-4">
        <% if @post.errors.any? %>
          <%= @post.errors.count %>件のエラーが発生しました
          <ul>
            <% @post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
                <%= form_with model: @post do |f| %>
          <div class="input-group mb-3">
            <%= f.text_area :caption, class:"form-control", rows:"5", placeholder:"投稿内容" %>
          </div>
          <h5>ジャンル</h5>
            <%= f.collection_select :genre_id, Genre.all, :id, :genre_name, include_blank: "--選択してください--" %>
          <h5 class="mt-3">画像</h5>
            <%= f.file_field :image, accept: "image/*" %>
            <%= f.submit '投稿', class:"btn btn-lg btn-block btn-info mt-4"  %>
        <% end %>
      </div>
    </div>
  </div>
</div>