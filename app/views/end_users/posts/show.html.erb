<div class="post-detail py-5 bg-light">
  <div class="card w-75 mx-auto mt-4 shadow-lg">
    <div class="card-body">
      <div class="row">
        <div class="col-1">
          <%= image_tag @post.end_user.get_profile_image, class:"rounded-circle ml-3", size: '50x50'  %>
        </div>
        <div class="col-10 mt-3">
          <span class="font-weight-bold"><%= @post.end_user.nick_name %></span>

          <span class="float-right"><i class="fa fa-comment"></i> <%= @post.post_comments.count %>
            <span id="favorite_buttons_<%= @post.id %>">
              <%= render "end_users/favorites/favorite", post: @post %>
            </span>
            <% if @post.end_user == current_end_user %>
            <span class="ml-3"><%= link_to "削除", post_path(@post), class:"font-weight-bolder text-danger card-hover", method: :delete %></span>
            <% end %>
            <span class="ml-3"><i class="fa fa-calendar mr-2"></i><%= @post.created_at.strftime('%Y/%m/%d') %></span>
          </span>
            <p class="card-title"><div class="<%= @post.get_image.blank? ? 'col-md-12' : 'col-md-6' %>">
              <span><%= @post.caption %></span>
            </div>
            <% unless @post.get_image.blank? %>
            <div class="col-md-6">
              <%= image_tag @post.get_image, size: '300x200', class: 'rounded-sm img-fluid d-block mx-auto mt-3' %>
            </div>
            <% end %></p>
        </div>
      </div>
       <div class="comments card-text">
        <% @post.post_comments.each do |post_comment| %>
          <div class="media border mb-3">
            <div class="media-body ml-2 p-2">
              <p>
                <%= image_tag post_comment.end_user.get_profile_image, class:"bd-placeholder-img align-self-center rounded-circle mx-3 mt-1", size: '40x40'  %>
                <span class="font-weight-bold"><%= post_comment.end_user.nick_name %></span>
                <span class="float-right mr-3"><i class="fa fa-calendar mt-3 ml-3"></i><span class="ml-2"><%= post_comment.created_at.strftime('%Y/%m/%d') %></span></span>
              </p>
              <p class="ml-5 mt-2"><%= post_comment.comment %></p>
              <% if post_comment.end_user == current_end_user %>
                <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete, class: "btn btn-danger pull-right float-right" %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="new-comment card-text">
        <%= form_with(model:[@post, @post_comment]) do |f| %>
          <div class="form-group">
            <label for="exampleFormControlTextarea1"><h4 class=" mt-3 font-weight-bold">コメントする</h4></label>
            <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
          </div>
          <%= f.submit "送信する", class:"btn btn-lg btn-info mt-2 float-right" %>
        <% end %>
      </div>
    </div>
  </div>
</div>