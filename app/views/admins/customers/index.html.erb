<div class="container">

  <div class="row">
    <div class="col-3 mb-5">
      <h5 class="text-center mt-5" style="background-color: #EEEEEE">会員一覧</h5>
   </div>
 </div>

  <div class="row">
    <div class="col-12 mb-5">
      <table class="table">
          <thead>
              <tr class="bg-light">
                  <th>会員ID</th>
                  <th>トップ画像</th>
                  <th>氏名</th>
                  <th>メールアドレス</th>
                  <th>ステータス</th>
              </tr>
          </thead>
          <tbody>
            <% @end_users.each do |end_user| %>
              <tr>
                  <td class="pt-4">
                    <%= link_to admins_customer_path(end_user), class: "text-dark customer-index" do %>
                      <%= end_user.id %>
                    <% end %>
                    </td>
                  <td>
                    <%= link_to admins_customer_path(end_user), class: "text-dark customer-index" do %>
                      <%= image_tag end_user.get_profile_image, class:"rounded-circle", size: '80x80' %>
                    <% end %>
                    </td>
                  <td class="pt-4">
                    <%= link_to admins_customer_path(end_user), class: "text-dark customer-index" do %>
                     <%= end_user.nick_name %>
                    <% end %>
                  </td>
                  <td class="pt-4">
                    <%= link_to admins_customer_path(end_user), class: "text-dark customer-index" do %>
                      <%= end_user.email %>
                    <% end %>
                    </td>
                  <td class="pt-4">
                    <%= link_to admins_customer_path(end_user), class: "text-dark customer-index" do %>
                      <% unless end_user.is_deleted == true %>
                        <span class="text-success font-weight-bold">有効</span>
                      <% else %>
                       <span class="text-secondary font-weight-bold">退会済</span>
                      <% end %>
                    <% end %>
                  </td>
              </tr>
            <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>